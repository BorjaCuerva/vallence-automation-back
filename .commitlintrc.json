{
  "extends": ["@commitlint/config-conventional"],
  "subject-max-length": [2, "always", 50],
  "rules": {
    "subject-case": [2, "never"],
    "scope-empty": [2, "never"],
    "scope-case": [2, "never"],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "api",
        "components",
        "config",
        "constants",
        "controllers",
        "dependencies",
        "documentation",
        "extensions",
        "lifecycles",
        "middlewares",
        "plugins",
        "readme",
        "routes",
        "schemas",
        "services",
        "styles",
        "testing",
        "types",
        "utils"
      ]
    ]
  }
}
